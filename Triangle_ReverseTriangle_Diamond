#include <iostream>
using namespace std;

void printstars(int n, int start, int end, int step) {
    for (int i = start; i != end; i += step) {
        cout << string(n - i, ' ') << string(2 * i - 1, '*') << endl;
    }
}

int main() {
    int n = 8;
    cout << "========================" << endl;
    cout << "||       Triangle     ||" << endl;
    cout << "========================\n" << endl;
    printstars(n, 1, n + 1, 1);

    cout << "\n========================" << endl;
    cout << "||  Reverse Triangle  ||" << endl;
    cout << "========================\n" << endl;
    printstars(n, n, 0, -1);

    cout << "\n========================" << endl;
    cout << "||      Diamond       ||" << endl;
    cout << "========================\n" << endl;
    printstars(n, 1, n + 1, 1);
    printstars(n, n - 1, 0, -1);

    return 0;
}
